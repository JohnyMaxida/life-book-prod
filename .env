# ===================================
# Life-Bot Configuration
# Copy this file to .env and update values
# ===================================

# --- Bot Configuration ---
LB_BOT__TOKEN_TEST=7345279574:xxx
LB_BOT__TOKEN_SERVER=7102218284:xxx
LB_BOT__URL_TEST=https://t.me/Lifetestbook_bot
LB_BOT__URL_SERVER=https://t.me/Book_of_lifebot
LB_BOT__ADMIN_IDS=[123456789]  # Comma-separated list of admin user IDs
LB_BOT__MODERATOR_IDS=[]
LB_BOT__REVISOR_IDS=[]
LB_BOT__USE_WEBHOOK=false
LB_BOT__WEBHOOK_URL=https://your-domain.com/webhook
LB_BOT__WEBHOOK_PORT=8443
LB_BOT__RATE_LIMIT=30

# --- Database Configuration ---
LB_DATABASE__URL=sqlite+aiosqlite:///./lifebook.db
LB_DATABASE__ECHO=false
LB_DATABASE__POOL_SIZE=5
LB_DATABASE__MAX_OVERFLOW=10
LB_DATABASE__POOL_RECYCLE=3600

# --- AI Configuration ---
LB_AI__ENABLED=true
LB_AI__PROVIDER=openai
LB_AI__API_KEY=your_openai_api_key_here
LB_AI__MODEL=gpt-4
LB_AI__TEMPERATURE=0.7
LB_AI__MAX_TOKENS=500

# --- Notification Settings ---
LB_NOTIFICATIONS__MORNING_TIME=09:00
LB_NOTIFICATIONS__EVENING_TIME=21:00
LB_NOTIFICATIONS__TIMEZONE=Europe/Moscow
LB_NOTIFICATIONS__ENABLED=true
LB_NOTIFICATIONS__WEEKLY_REPORT_DAY=0  # 0 = Monday, 6 = Sunday

# --- Paths ---
LB_PATHS__DATA_DIR=DATA-LIFE
LB_PATHS__ART_DIR=DATA-LIFE/life-art
LB_PATHS__ART_BLOCK_DIR=DATA-LIFE/art-block
LB_PATHS__LOGS_DIR=logs
LB_PATHS__LIFE_DB_FILE=dbook.sql

# --- Marathon Settings ---
LB_MARATHON__MAX_DAYS=28
LB_MARATHON__ITEMS_PER_PAGE=4
LB_MARATHON__DEFAULT_TARIFF=FREE
LB_MARATHON__TARRIFFS=['FREE', 'PRO']

# --- Security ---
LB_SECURITY__SECRET_KEY=change-me-to-a-secure-random-string
LB_SECURITY__JWT_SECRET=another-secure-string
LB_SECURITY__PASSWORD_SALT_ROUNDS=10

# --- Application Settings ---
LB_APP__DEBUG=false
LB_APP__DEMO_MODE=false
LB_APP__ENVIRONMENT=development  # development, staging, production
LB_APP__VERSION=1.0.0
LB_APP__TIMEZONE=Europe/Moscow

# --- Logging ---
LB_LOGGING__LEVEL=INFO
LB_LOGGING__FILE=lifebook.log
LB_LOGGING__MAX_SIZE=10485760  # 10MB
LB_LOGGING__BACKUP_COUNT=5

# --- External Services ---
LB_EXTERNAL__S3_BUCKET=
LB_EXTERNAL__S3_ACCESS_KEY=
LB_EXTERNAL__S3_SECRET_KEY=
LB_EXTERNAL__EMAIL_PROVIDER=
LB_EXTERNAL__EMAIL_API_KEY=
